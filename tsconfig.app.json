{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/vuedashkit.ts",
    "src/**/*.vue",
    "src/components/loading/*.vue",
    "src/components/form/*",
    "src/**/**/*.ts",
    "src/**/**/**.ts",
    "src/locales/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "target": "ESNext",
    // "moduleResolution": "nodenext",
    "module": "ESNext",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}